{
  "expo": {
    "name": "Ecclesia",
    "slug": "ecclesia-church-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.ecclesia.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.ecclesia.app",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_NETWORK_STATE"
      ],
      "useNextNotificationFormat": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow Ecclesia to access your face ID"
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://your-api-url.com",
      "eas": {
        "projectId": "9db84fa4-36b9-4535-a256-c902038dcde0"
      }
    },
    "scheme": "ecclesia",
    "owner": "kachianietie"
  }
}
